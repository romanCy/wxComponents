.wxapp-toast-mask{
    opacity: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 888;
}
.wxapp-toast-content-box {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    position: fixed;
    z-index: 999;
}
.wxapp-toast-content {
    width: 50%;
    padding: 20rpx;
    background: rgba(0, 0, 0, 0.7);
    border-radius: 20rpx;
}
.wxapp-toast-content-text {
    height: 100%;
    width: 100%;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}