/* components/modal/modal.wxss */
.layer{
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.85);
    display: flex;
    justify-content: center;
    align-items: center;
}
.wrap{
    width: 510rpx;
    overflow: hidden;
    border-radius: 16rpx;
    background: #ffffff;
}
.title{
    height: 114rpx;
    line-height: 114rpx;
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #333333;
    text-align: center;
    border-bottom: 1px solid #F2F2F2;
}
.content{
    padding: 30rpx 0;
    border-bottom: 1px solid #F2F2F2;
}
.msg{
    width: 100%;
    text-align: center;
    height: 42rpx;
    line-height: 42rpx;
    font-size: 28rpx;
    color: #333333;
}
.btns{
    width: 100%;
    height: 94rpx;
    display: flex;

}
.btn{
    width: 50%;
    flex-shrink:1;
    flex-grow: 1;
    text-align: center;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #999999;
    letter-spacing: 0;
    height: 94rpx;
    line-height: 94rpx;
    position: relative;
}
.sure{
    flex-grow: 1;
    color: #FF4747;

}
.cancel{
    flex-grow: 1;
}
.bor:after{
    content: ' ';
    position: absolute;
    left: 0;
    top: 0;
    height: 94rpx;
    width: 1rpx;
    background: #F2F2F2;
}